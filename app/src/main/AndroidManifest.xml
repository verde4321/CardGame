<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.tinf18b2.cardgame">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.tinf18b2.cardgame.view.activity.PrivacyPolicyActivity"
                android:parentActivityName="com.tinf18b2.cardgame.view.activity.SettingsActivity"
                android:screenOrientation="landscape">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.tinf18b2.cardgame.view.activity.SettingsActivity" />
        </activity>
        <activity
                android:name=".view.activity.MainMenuActivity"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name="com.tinf18b2.cardgame.view.activity.SettingsActivity"
                android:parentActivityName=".view.activity.MainMenuActivity"
                android:screenOrientation="landscape">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".view.activity.MainMenuActivity" />
        </activity>

        <activity
                android:name="com.tinf18b2.cardgame.view.activity.GameActivity"
                android:parentActivityName=".view.activity.MainMenuActivity"
                android:screenOrientation="landscape">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".view.activity.MainMenuActivity" />
        </activity>
        <activity
                android:name="com.tinf18b2.cardgame.view.activity.NewGameActivity"
                android:parentActivityName=".view.activity.MainMenuActivity"
                android:screenOrientation="landscape">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".view.activity.MainMenuActivity" />
        </activity>
    </application>

</manifest>
